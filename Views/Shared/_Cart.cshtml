@model IEnumerable<CartItem>




    
        @foreach(var obj in Model)
        {
            <div class="dropdown-item" href="#">
                <div class="flex-column">
                    <h5>Name: @obj.Product.Name</h5>
                    <p> Quantity: @obj.Quantity</p>
                    <p>Price: @obj.Product.Price</p>               
                </div>
                <a class="btn btn-danger" asp-area=""
                asp-controller="Cart"
                asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </div>
            <div class="dropdown-divider"></div>
            
        }
    